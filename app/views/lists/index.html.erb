<h1 class='text-center'>The Hall of Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <li><%= list.name %></li>
    <p> -----> <%= list.description %></p>
      <%= link_to 'Show', list %> |
      <%= link_to 'Edit', edit_list_path(list) %> |
      <%= link_to 'Destroy',
        list,
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>
<br>

<%= link_to 'New List', new_list_path %>
